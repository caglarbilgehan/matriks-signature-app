{
  "name": "signature-app",
  "version": "1.0.1-beta.3",
  "description": "Cross-platform desktop app to generate Outlook email signature HTML from user inputs.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-packager . SignatureApp --platform=win32,darwin,linux --arch=x64 --overwrite",
    "dist": "electron-builder",
    "prebuild:assets": "node scripts/prebuild.js",
    "dist:win": "npm run prebuild:assets && electron-builder --win --x64",
    "dist:mac": "electron-builder --mac --x64",
    "dist:linux": "electron-builder --linux --x64",
    "prepare": "husky install",
    "release": "standard-version && git push --follow-tags",
    "release:first": "standard-version --first-release",
    "version:patch": "npm version patch -m \"chore: bump version to %s\"",
    "version:minor": "npm version minor -m \"chore: bump version to %s\"",
    "version:major": "npm version major -m \"chore: bump version to %s\"",
    "version:prebeta": "npm version prerelease --preid=beta -m \"chore: prerelease (beta) %s\"",
    "version:prealpha": "npm version prerelease --preid=alpha -m \"chore: prerelease (alpha) %s\"",
    "postversion": "git push && git push --tags",
    "release:win": "npm run dist:win",
    "release:mac": "npm run dist:mac",
    "release:linux": "npm run dist:linux"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "18.6.1",
    "@commitlint/config-conventional": "18.6.3",
    "electron": "28.2.0",
    "electron-builder": "24.6.4",
    "electron-packager": "17.1.1",
    "husky": "9.1.6",
    "standard-version": "9.5.0"
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "juice": "10.0.0"
  },
  "build": {
    "appId": "com.matriks.signatureapp",
    "productName": "Matriks Outlook Email Imzasi Olusturucu",
    "buildVersion": "1.0.1.3",
    "files": [
      "**/*",
      "!dist",
      "!out",
      "!assets/**"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "caglarbilgehan",
        "repo": "matriks-signature-app",
        "releaseType": "prerelease"
      }
    ],
    "win": {
      "icon": "build/app-icon.ico",
      "rfc3161TimeStampServer": "http://timestamp.digicert.com",
      "publisherName": [
        "Matriks Bina Kontrol Sistemleri"
      ],
      "artifactName": "signature-app-Setup-${version}.${ext}",
      "executableName": "SignatureApp",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Matriks Outlook Email Imzasi Olusturucu"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    }
  }
}
